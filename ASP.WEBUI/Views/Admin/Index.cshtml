@using ACR.Business.Models;

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid">
	<h1 class="mt-4">Kontrol Paneli</h1>
	<ol class="breadcrumb mb-4">
		<li class="breadcrumb-item active">Kontrol Paneli</li>
	</ol>
	<div class="row">
		<div class="col-xl-3 col-md-6">
			<div class="card bg-primary text-white mb-4">
				<div class="card-body">İstatislik Bilgileri</div>
				<div class="card-footer d-flex align-items-center justify-content-between">
					<a class="small text-white stretched-link" href="@Url.Action("Statistics","Admin")">Detayları Görüntüle</a>
					<div class="small text-white"><i class="fas fa-angle-right"></i></div>
				</div>
			</div>
		</div>
		<div class="col-xl-3 col-md-6">
			<div class="card bg-warning text-white mb-4">
				<div class="card-body">Kullanıcı Bilgileri</div>
				<div class="card-footer d-flex align-items-center justify-content-between">
					<a class="small text-white stretched-link" href="@Url.Action("Users","Admin")">Detayları Görüntüle</a>
					<div class="small text-white"><i class="fas fa-angle-right"></i></div>
				</div>
			</div>
		</div>
		<div class="col-xl-3 col-md-6">
			<div class="card bg-success text-white mb-4">
				<div class="card-body">Rezervasyon Bilgileri</div>
				<div class="card-footer d-flex align-items-center justify-content-between">
					<a class="small text-white stretched-link" href="@Url.Action("Reservations","Admin")">Detayları Görüntüle</a>
					<div class="small text-white"><i class="fas fa-angle-right"></i></div>
				</div>
			</div>
		</div>
		<div class="col-xl-3 col-md-6">
			<div class="card bg-danger text-white mb-4">
				<div class="card-body">Makine Bilgileri</div>
				<div class="card-footer d-flex align-items-center justify-content-between">
					<a class="small text-white stretched-link" href="@Url.Action("Machines","Admin")">Detayları Görüntüle</a>
					<div class="small text-white"><i class="fas fa-angle-right"></i></div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6">
			<div class="card mb-4">
				<div class="card-header">
					<i class="fas fa-chart-pie mr-1"></i>
					Randevu Durum Pasta Grafiği
				</div>
				<div class="card-body"><canvas id="myPieChart2" width="100%" height="50"></canvas></div>
			</div>
		</div>
				<div class="col-xl-6">
			<div class="card mb-4">
						<div class="card-header">
								<i class="fas fa-chart-pie mr-1"></i>
								Makine Durum Pasta Grafiği
						</div>
						<div class="card-body"><canvas id="myPieChart3" width="100%" height="50"></canvas></div>
				</div>
		</div>
		</div>
</div>

