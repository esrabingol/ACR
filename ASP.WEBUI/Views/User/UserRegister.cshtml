@using ASP.WEBUI.Models;
@model UserRegisterModel
@{
	ViewData["Title"] = "UserRegister";
}
@{
	Layout = null;
}
<!doctype html>
<html lang="tr">
<head>
	<title>KAYIT OL</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="~/register/css/style.css" rel="stylesheet" />

</head>
<body>
	<section class="ftco-section">
		<div class="container">

			<div class="row justify-content-center">
				<div class="col-md-7 col-lg-6 col-xl-5">
					<div class="login-wrap p-4 p-md-5">
						<div class="icon d-flex align-items-center justify-content-center">
							<span class="fa fa-edit"></span>
						</div>
						<h3 class="text-center mb-4">KULLANICI KAYIT EKRANI</h3>

						<form action="UserRegister" class="signup-form">
							<div class="form-group mb-3">
								<label class="label" for="Name">Adınız</label>
								<input type="text" class="form-control" placeholder="İsim">
							</div>
							<div class="form-group mb-3">
								<label class="label" for="Name">Soyadınız</label>
								<input type="text" class="form-control" placeholder="Soyisim">
							</div>
							<div class="form-group mb-3">
								<label class="label" for="MailAdress">Mail Adresiniz</label>
								<input type="text" class="form-control" placeholder="Kurum içi etkin mail adresinizi giriniz.">
							</div>
							<div class="form-group mb-3">
								<label class="label" for="PhoneNumber">Telefon Numaranız</label>
								<input type="text" class="form-control" placeholder="Telefon Numaranızı Giriniz.">
							</div>
							<div class="form-group mb-3">
								<label class="label" for="Password">Şifreniz</label>
								<input id="password-field" type="password" class="form-control" placeholder="Şifrenizi Giriniz.">
								<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
							</div>
							<div class="form-group d-md-flex">
								<div class="w-100 text-left">
									<label class="radio-wrap">
										<input type="radio" asp-for="UserRole" value="Requester" />
										<span class="checkmark"></span>
										ÜRETİM MÜHENDİSİ
									</label>
								</div>
								<div class="w-100 text-left">
									<label class="radio-wrap">
										<input type="radio" asp-for="UserRole" value="User" />
										<span class="checkmark"></span>
									 OPERATÖR
									</label>
								</div>
							</div>
							<div class="form-group d-md-flex">
								<div class="w-100 text-left">
									<label class="checkbox-wrap checkbox-primary">
										"Kullanım Koşulları'ndaki tüm beyanları kabul ediyorum."
										<input type="checkbox" checked>
										<span class="checkmark"></span>
									</label>
								</div>
							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary rounded submit px-3">Kayıt Ol</button>
							</div>
						</form>
						<p>Daha Önce Üyelik Oluşturduysanız? <a href="@Url.Action("UserLogin", "User")">Üye Girişi</a></p>
					</div>
				</div>
			</div>
		</div>
	</section>


	<script src="~/register/js/jquery.min.js"></script>
	<script src="~/register/js/popper.js"></script>
	<script src="~/register/js/bootstrap.min.js"></script>
	<script src="~/register/js/main.js"></script>
</body>
</html>

