
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.WEBUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP.WEBUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="navbar-header">
                    <a class="navbar-brand font-weight-bold" asp-area="" asp-page="/Index">
                        <img src="~/img/logo.png" alt="Logo" height="40" class="d-inline-block align-text-top"> <!-- Amblem -->
                        OTOKLAV REZERVASYON SİSTEMİ
                    </a>
                </div>
                <div class="ml-auto d-flex justify-content-between">
                    <form action="@Url.Action("UserLogin", "User")" method="post">
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    </form>
             
                    <form action="@Url.Action("UserRegister", "User")" method="post">
                        <button type="submit" class="btn btn-danger ml-2">Kayıt Ol</button>
                    </form>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Türk Havacılık ve Uzay Sanayii A.Ş. Tüm hakları saklıdır.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
