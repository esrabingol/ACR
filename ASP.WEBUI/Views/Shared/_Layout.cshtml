
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.WEBUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP.WEBUI.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="container-fluid">
					<!-- Navbar içeriği buraya eklenecek --> <div class="navbar-header">
						<a class="navbar-brand font-weight-bold" asp-area="" asp-page="/Index">
							<img src="~/img/logo.png" alt="Logo" height="40" class="d-inline-block align-text-top"> <!-- Amblem -->
							<strong>OTOKLAV REZERVASYON SİSTEMİ</strong>
						</a>
					</div>
                </div>
               
                @if (ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index")
                {
                    <div class="ml-auto d-flex justify-content-between">
                        <form action="@Url.Action("UserLogin", "User")" method="post">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </form>

                        <form action="@Url.Action("UserRegister", "User")" method="post">
                            <button type="submit" class="btn btn-danger ml-2">Kayıt Ol</button>
                        </form>
                    </div>
                }
@*
                @{
                    string currentController = ViewContext.RouteData.Values["controller"] as string;
                    string currentAction = ViewContext.RouteData.Values["action"] as string;
                }

                @if (!(string.Equals(currentController, "Home", StringComparison.OrdinalIgnoreCase) && string.Equals(currentAction, "Index", StringComparison.OrdinalIgnoreCase)))
                {
                    <div class="dropdown ml-3">
                        <!--dropdown-->
                        <div class="dropdown ml-3">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-user"></i> Hesabım
                            </button>
                            <div class="dropdown-menu" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#" data-toggle="collapse" data-target="#accountSubMenu">
                                    <strong>Hesap Bilgileri</strong>
                                </a>
                                <div class="collapse" id="accountSubMenu">
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("InfoUserID","Account")">
                                        Kimlik Bilgileri
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("InfoContact","Account")">
                                        İletişim Bilgileri
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("Security","Account")">
                                        Güvenlik İşlemleri
                                    </a>
                                </div>
                                <a class="dropdown-item" href="#" data-toggle="collapse" data-target="#appointmentSubMenu">
                                    <strong>Randevu Bilgileri</strong>
                                </a>
                                <div class="collapse sub-menu" id="appointmentSubMenu">
                                    <div class="dropdown-divider"></div>
