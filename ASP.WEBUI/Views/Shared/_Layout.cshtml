
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.WEBUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP.WEBUI.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="navbar-header">
                    <a class="navbar-brand font-weight-bold" asp-area="" asp-page="/Index">
                        <img src="~/img/logo.png" alt="Logo" height="40" class="d-inline-block align-text-top"> <!-- Amblem -->
                        <strong>OTOKLAV REZERVASYON SİSTEMİ</strong>
                    </a>
                </div>
                @if (ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index")
                {
                    <div class="ml-auto d-flex justify-content-between">
                        <form action="@Url.Action("UserLogin", "User")" method="post">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </form>

                        <form action="@Url.Action("UserRegister", "User")" method="post">
                            <button type="submit" class="btn btn-danger ml-2">Kayıt Ol</button>
                        </form>
                    </div>
                }
                <!--dropdown-->
                <div class="dropdown ml-3">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                         Hesabım
                    </button>
                    <div class="dropdown-menu" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="#" data-toggle="collapse" data-target="#accountSubMenu">
                           Hesap Bilgileri
                        </a>
                        <div class="collapse" id="accountSubMenu">
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">
                                Kimlik Bilgileri
                            </a>
                            <a class="dropdown-item" href="#">
                               İletişim Bilgileri
                            </a>
                            <a class="dropdown-item" href="#">
                               Güvenlik İşlemleri
                            </a>
                            <a class="dropdown-item" href="#">
                              Bilgilendirme İşlemleri
                            </a>
                        </div>
                        <a class="dropdown-item" href="#">
                             Randevu Bilgileri
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">
                           Çıkış
                        </a>
                    </div>
                </div>
        </nav>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Türk Havacılık ve Uzay Sanayii A.Ş. Tüm hakları saklıdır.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

