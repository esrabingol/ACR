<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Randevu Filtreleme Ekranı</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            line-height: 2.5;
        }

        .main-container {
            display: flex;
            max-width: 100%;
            margin: 0;
        }

        .filter-section {
            background-color: #fff;
            border: 1px solid #d4d4d4;
            border-radius: 8px;
            padding: 10px;
            margin-right: 0px; 
            flex: 1;
        }

        .filter-options input,
        .filter-options select {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        .buttons-section {
            display: flex;
            gap: 10px;
        }

        .button {
            flex: 1;
            padding: 15px; 
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            text-align: center;
        }

        .button-blue {
            background-color: #007bff;
            color: #fff;
        }

        .results-section {
            background-color: #fff;
            border: 1px solid #d4d4d4;
            border-radius: 8px;
            padding: 500px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .top-buttons {
            display: flex;
            justify-content: space-between;
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            background-color: #fff;
            z-index: 1;
            padding: 10px;
        }

            .top-buttons .btn {
                margin-left: 5px;
            }

        .pb-3,
        .py-3 {
            padding-bottom: 5rem !important;
        }

        .btn {
            font-weight: lighter;
            font-size: 2rem;
        }

        .filter-options label {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="main-container">
        <div class="filter-section">
            <div class="filter-options">
                <label for="machineName">Makine Adı:</label>
                <select id="machineName">
                    <option value="">Makine1</option>
                    <option value="">Makine2</option>
                    <!-- Makine adlarını dinamik olarak ekleyin -->
                </select>

                <label for="projectName">Proje Adı:</label>
                <input type="text" id="projectName">

                <label for="partName">Parça Adı:</label>
                <input type="text" id="partName">

                <label for="recipeCode">Reçete Kodu:</label>
                <input type="text" id="recipeCode">

                <label for="startDate">Başlangıç Tarihi:</label>
                <input type="date" id="startDate">

                <label for="endDate">Bitiş Tarihi:</label>
                <input type="date" id="endDate">

                <label for="startTime">Başlangıç Saati:</label>
                <input type="time" id="startTime">

                <label for="endTime">Bitiş Saati:</label>
                <input type="time" id="endTime">
            </div>
            <div class="buttons-section">
                <button type="button" class="btn btn-outline-primary" onclick="filterAppointments()">Randevu Ara</button>
            </div>
        </div>
        <div class="results-section">
            <div class="top-buttons">
                <button type="button" class="btn btn-outline-secondary">Bilgi Getir</button>
                <button type="button" class="btn btn-outline-success" onclick="redirectTo('@Url.Action("ViewMachineInfo", "Operator")')">Makine İşlemleri</button>
                <button type="button" class="btn btn-outline-warning" onclick="redirectTo('@Url.Action("ManageReservation", "Operator")')">Randevu İşlemleri</button>
                <button type="button" class="btn btn-outline-danger">Temizle</button>
            </div>
        </div>
    </div>

