@using ASP.WEBUI.Models;
@model OpEditMachineModel
@*makine işlemlerinden sonra düzenle kısmı*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="tr">

<head>

   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            line-height: 2.5;
        }

        .main-container {
            display: flex;
            max-width: 100%;
            margin: 0;
        }

        .filter-section {
            background-color: #fff;
            border: 1px solid #d4d4d4;
            border-radius: 8px;
            padding: 10px;
            margin-right: 0px;
            flex: 1;
        }

        .filter-options input,
        .filter-options select {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        .buttons-section {
            display: flex;
            gap: 10px;
        }

        .button {
            flex: 1;
            padding: 15px; 
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            text-align: center;
        }

        .button-blue {
            background-color: #007bff;
            color: #fff;
        }

        .results-section {
            background-color: #fff;
            border: 1px solid #d4d4d4;
            border-radius: 8px;
            padding: 500px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            position: relative;
        }

        .top-buttons {
            display: flex;
            justify-content: space-between;
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            background-color: #fff;
            z-index: 1;
            padding: 10px;
        }

            .top-buttons .btn {
                margin-left: 5px;
            }

        .pb-3,
        .py-3 {
            padding-bottom: 8rem !important;
        }

        .btn {
            font-weight: lighter;
            font-size: 2rem;
            border: 2px solid dodgerblue;
        }

        .filter-options label {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="main-container">
        <div class="filter-section">
            <form asp-controller="Operator" asp-action="EditMachineInfo" method="post">
                <div class="filter-options">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <a href=@Url.Action("ViewMachineInfo","Operator")>
                            <span class="glyphicon glyphicon-circle-arrow-left" style="font-size: 24px;"></span>
                        </a>
                    </div>
                    <label for="machineName">Makine Adı:</label>
                    <select asp-for="machineName" class="form-control" placeholder="Departman Seçimi">
                    @*    @if (Model.machineName != null)
                        {
                            foreach (var item in Model.machineName)
                            {
                                <option value="@item.machineName">@item.machineName</option>
                            }
                        }*@
                    </select>
                    <label for="machineStatu">Makine Durumu:</label>
                    <select id="machineStatu">
                        <option value="">Aktif</option>
                        <option value="">Pasif</option>
                        <!-- Makine adlarını dinamik olarak ekleyin -->
                    </select>

                    <label for="itemNo">Item No:</label>
                    <input type="number" id="itemNo">

                    <label for="tcNumber">TC:</label>
                    <input type="number" id="tcNumber">

                    <label for="vpNumber">VP:</label>
                    <input type="number" id="vpNumber">


                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="form-label" for="StartDate">Bakım Başlangıç Tarihi:</label>
                            <input type="date" class="form-control" id="StartDate" name="StartDate" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-label" for="EndDate">Bakım Bitiş Tarihi:</label>
                            <input type="date" class="form-control" id="EndDate" name="EndDate" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="OperatorNote">Operator Notu:</label>
                        <textarea class="form-control" id="OperatorNote" name="OperatorNote"></textarea>
                    </div>


                </div>
                <div class="buttons-section">
                    <button type="button" class="btn btn-outline-primary" onclick="#">Güncelle</button>
                </div>
            </form>
    
        </div>
    </div>

    <script>
        function redirectTo(url) {
            window.location.href = url;
        }
        function filterAppointments() {
            // Seçilen filtrelerle ilgili veri çekme ve görüntüleme mantığını burada uygulayın
        }
    </script>
</body>

</html>