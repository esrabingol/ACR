@model ACR.Entity.Concrete.Machine
@{
	ViewData["Title"] = "EditMachineInfo";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="tr">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link href="~/css/createreservation.css" rel="stylesheet" />
</head>

<body>
	<div class="main-container">
		<div class="filter-section">
			<form asp-controller="Operator" asp-action="EditMachineInfo" method="post">
				<input asp-for="Id" value="@Model.Id" type="hidden" />
				<div class="filter-options">
					<div class="d-flex justify-content-between align-items-center mb-3">
						<a href=@Url.Action("ViewMachineInfo","Operator")>
							<span class="glyphicon glyphicon-circle-arrow-left" style="font-size: 24px;"></span>
						</a>
					</div>
					@if (TempData["SuccessMessage"] != null)
					{
						<div class="alert alert-success" role="alert">
							@TempData["SuccessMessage"]
						</div>
					}
					<label><strong>Makine Adı:</strong></label>
					<input asp-for="MachineName" value="@Model.MachineName" class="form-control" placeholder="Makine Adı giriniz." required />
					@*	<select asp-for="MachineName" class="form-control" placeholder=" Seçimi">
					<option value="" selected disabled>Seçiniz</option>
					@if (Model.MachineName != null)
					{
					foreach (var item in Model.MachineName)
					{
					<option>@item.MachineName </option>
					}
					}
					</select>*@
					<label for="machineStatu">Makine Durumu:</label>
					<select asp-for="MachineStatus" class="form-control" placeholder="Makine Durumu Seçimi" required>
						<option value="" selected disabled>Seçiniz</option>
						<option value="Aktif">AKTİF</option>
						<option value="Pasif">PASİF</option>
					</select>

					<label for="ItemNo">Item No :</label>
					<input asp-for="ItemNo" value="@Model.ItemNo" class="form-control" placeholder="Item No giriniz." required />

					<label for="Tc">TC:</label>
					<input asp-for="TcNumber" value="@Model.TcNumber" class="form-control" placeholder="TC değerini giriniz." required />

					<label for="Vp">VP:</label>
					<input asp-for="VpNumber" value="@Model.VpNumber" class="form-control" placeholder="VP değerini giriniz." required />

					<div class="form-row">
						<div class="form-group col-md-6">
							<label class="form-label" for="StartDate">Bakım Başlangıç Tarihi:</label>
							<input asp-for="StartDate" value="@Model.StartDate" type="datetime-local" class="form-control"  />
						</div>
						<div class="form-group col-md-6">
							<label class="form-label" for="EndDate">Bakım Bitiş Tarihi:</label>
							<input asp-for="EndDate" value="@Model.EndDate" type="datetime-local" class="form-control"  />
						</div>
					</div>

					<div class="form-group">
						<label class="form-label" for="OperatorNote">Operator Notu:</label>
						<input asp-for="OperatorNote" value="@Model.OperatorNote" type="text" class="form-control" />
					</div>

				</div>
				<div class="buttons-section">
					<button type="submit" class="btn btn-outline-primary">Güncelle</button>
				</div>
			</form>

		</div>
	</div>

	<script>
		function redirectTo(url) {
			window.location.href = url;
		}
	</script>
</body>

</html>